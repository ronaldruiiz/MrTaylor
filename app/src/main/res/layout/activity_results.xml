<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBrackground"
    tools:context=".views.ResultsActivity"
    >

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/pbResults"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible"
        android:indeterminateDrawable="@drawable/mipbstyle"
        android:progressDrawable="@drawable/mipbstyle"
        />

    <TextView
        android:id="@+id/txtAlert"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respuesta no encontrada"

        />
    <android.support.v7.widget.RecyclerView
        android:visibility="invisible"
        android:id="@+id/cdView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_results"
        >

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>