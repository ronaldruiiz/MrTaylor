
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBrackground"
    tools:context=".views.HomeActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/calNormal"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:clickable="true"
        android:layout_weight="5"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="intent"
        card_view:cardBackgroundColor="#E2E2E2"
        card_view:cardCornerRadius="10dp"
        >
        <ImageView
            android:id="@+id/imgNormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background"
            />
        <TextView
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:layout_gravity="top"
            android:text="NORMAL"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/calSerie"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:clickable="true"
        android:layout_weight="5"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="intent"
        card_view:cardCornerRadius="10dp"
        >
        <ImageView
            android:id="@+id/imgSerie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background"
            />
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:text="SERIE"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbInfo"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_memory"
        android:backgroundTint="#fff"
        />
</FrameLayout>